{
  "name": "masary-api",
  "version": "1.0.0",
  "description": "REST API with Express.js and Authentication using best design patterns",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "./node_modules/.bin/tsc || npx --package=typescript tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "migrate": "tsx src/migrations/migrate.ts",
    "migrate:create": "tsx src/migrations/create-migration.ts",
    "migrate:up": "tsx src/migrations/migrate.ts up",
    "migrate:down": "tsx src/migrations/migrate.ts down",
    "migrate:status": "tsx src/migrations/migrate.ts status",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "express",
    "rest-api",
    "authentication",
    "jwt",
    "nodejs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
